<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#4D2F25</item>
        <item name="colorPrimaryDark">#331F18</item>
        <item name="colorAccent">#FFA900</item>
        <item name="android:textColor">#492200</item>
        <item name="android:windowBackground">#EBE8DD</item>
    </style>

    <!-- Style for question TextView -->
    <style name="QuestionTextStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#492200</item>
    </style>

    <!-- Alert dialog theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">#4D2F25</item>
        <item name="colorPrimaryDark">#331F18</item>
        <item name="colorAccent">#FFA900</item>
        <item name="android:textColor">#492200</item>
        <item name="android:windowBackground">#EBE8DD</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>
